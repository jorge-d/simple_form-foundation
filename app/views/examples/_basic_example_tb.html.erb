<form role="form">
  <div class="row">
    <div class="small-12 columns">
      <label>Email
        <input type="email" placeholder="Enter email">
      </label>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <label>Password
        <input type="password" placeholder="Password">
      </label>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <label>File
        <input type="file">
      </label>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <label for="checkbox1" class="boolean" ><input type="checkbox" id="checkbox1" />Active</label>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <label>Choices</label>

      <div class="checkbox">
        <label for="checkbox2">
          <input type="checkbox" id="checkbox2" name="optionsRadios" value="option1" checked />Option one is this and that&mdash;be sure to include why it's great
        </label>
      </div>
      <div class="checkbox">
        <label for="checkbox3">
        <input type="checkbox" id="checkbox3" name="optionsRadios" value="option2" />Option two can be something else
        </label>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <label>Sex</label>
      <div class="radio">
        <label for="optionsRadios1">
          <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked />Male
        </label>
      </div>
      <div class="radio">
        <label for="optionsRadios2">
          <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2" />Female
        </label>
      </div>
    </div>
  </div>

  <button type="submit" class="btn btn-default">Create User</button>
</form>
