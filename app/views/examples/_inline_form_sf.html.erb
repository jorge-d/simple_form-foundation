<%= simple_form_for @user_inline, url: create_inline_examples_url, as: 'user_inline',
  wrapper: :inline_form,
  wrapper_mappings: {
    boolean: :vertical_boolean,
  } do |f| %>
  <%= f.error_notification %>

  <div class='row'>
    <%= f.input :email, placeholder: 'Enter email' %>

    <%= f.input :password, placeholder: 'Password' %>

    <%= f.input :active, label: 'Remember me', wrapper_html: {class: 'column large-4'}, label_html: {class: 'inline'} %>
  </div>

  <%= f.button :submit %>

<% end %>
